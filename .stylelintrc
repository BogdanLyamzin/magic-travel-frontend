{
    "plugins": [
        "stylelint-order"
    ],
    "rules": {
        "indentation": 2,
        "no-extra-semicolons": true,
        "color-no-invalid-hex": null,
        "max-nesting-depth": 3,
        "block-no-empty": true,
        "comment-no-empty": null,
        "order/properties-order": [
            "position",
            "z-index",
            "top",
            "right",
            "bottom",
            "left"
        ],
        "ignoreFiles": [
            "**/*.js",
            "**/*.jsx"
        ]
    }
}
